{
    "rules":{
        "student_situation":[
            {"id":1,"text":"生徒の様子は？","qtype":"text","constraint":"not_null"}
        ],
        "example_sentence":[
            {"id":1,"text":"例文","qtype":"text","constraint":"not_null","parsing":1}
        ],
        "correct_answer_pattern":[
            {"id":1,"text":"正答パターンの使用","qtype":"boolean","skip_id":2},
            {"id":2,"text":"正答パターン","qtype":"text","constraint":"check","check_id":1}
        ],
        "word_accurancy":[
            {"id":1,"text":"単語正誤の使用","qtype":"boolean","skip_id":3},
            {
                "id":2,
                "text":"どこから",
                "select":[
                    {"id":1,"text":"先頭から"},
                    {"id":2,"text":"後ろから"}
                ],
                "qtype":"select"
            },
            {"id":3,"text":"何％","qtype":"percent","constraint":"check","check_id":1}
        ],
        "teacher_behavior":[
            {"id":1,"text":"教師の言動","qtype":"text","constraint":"not_null"}
        ],
        "phonetic_features":[
            {"id":1,"text":"動詞時制の不一致","type":"文法の誤り","qtype":"boolean"},
