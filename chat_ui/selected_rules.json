            {"id":3,"text":"名詞の数の不一致","type":"文法の誤り","qtype":"boolean"},
            {"id":4,"text":"単語抜け判定","type":"文法の誤り","qtype":"boolean"},
            {"id":5,"text":"文章のみの判定","type":"文法の誤り","qtype":"boolean"},
            {"id":101,"text":"固有名詞と名詞違い","type":"語彙の誤り","qtype":"boolean"},
            {"id":102,"text":"（一致すべき部分の）単語違い","type":"語彙の誤り","qtype":"boolean"},
            {"id":103,"text":"POSタグ違い","type":"語彙の誤り","qtype":"boolean"},
            {"id":104,"text":"日本語が検出された","type":"語彙の誤り","qtype":"boolean"},
            {"id":201,"text":"間が空いている","type":"発生の誤り","qtype":"boolean"},
            {"id":202,"text":"言い淀みが含まれる","type":"発生の誤り","qtype":"boolean"},
            {"id":203,"text":"音声から認識される単語なし","type":"発生の誤り","qtype":"boolean"},
            {"id":204,"text":"余計な単語が正解解答の後に入る","type":"発生の誤り","qtype":"boolean"}
        ],
        "image_features":[
            {"id":1,"text":"動作の変化がない","type":"顔の動作","qtype":"boolean"},
            {"id":2,"text":"首を傾げる","type":"顔の動作","qtype":"boolean"},
            {"id":3,"text":"頭が揺れる","type":"顔の動作","qtype":"boolean"},
            {"id":4,"text":"常に動いている","type":"顔の動作","qtype":"boolean"},
            {"id":101,"text":"正面を向いている","type":"顔の向き","qtype":"boolean"},
            {"id":102,"text":"正面を向いていない","type":"顔の向き","qtype":"boolean"}
