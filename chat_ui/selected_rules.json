        "visual_features":[
            {"id":1,"text":"目線が定まらない","type":"","qtype":"boolean"},
            {"id":2,"text":"頭が揺れる","type":"","qtype":"boolean"},
            {"id":3,"text":"目を見開く","type":"","qtype":"boolean"},
            {"id":4,"text":"口元が上がる","type":"","qtype":"boolean"},
            {"id":5,"text":"頭が上下する","type":"","qtype":"boolean"},
            {"id":6,"text":"体が揺れる","type":"","qtype":"boolean"},
            {"id":7,"text":"瞬きが多い","type":"","qtype":"boolean"},
            {"id":8,"text":"手が動く","type":"","qtype":"boolean"},
            {"id":9,"text":"単語ごとに発音身振り付き","type":"","qtype":"boolean"},
